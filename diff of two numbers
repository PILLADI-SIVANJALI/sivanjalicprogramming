#include<stdio.h>
//find the sum and difference of two numbers for int and float numbers
main(){
	int a,b;                                               //int a,b;
	float c,d;                                            //float c,d;
	printf("enter the a value");                         //printf("enter two integers");
	scanf("%d",&a);                                     //scanf("%d%d",&a,&b);
	printf("enter the b value");                       //printf("enter two floating ppoint numbers");
	scanf("%d",&b);                                   //scanf("%f%f",&a,&b);
	printf("enter the c value");                     //printf("the sum of two integers is %d\n",a+b);
	scanf("%f",&c);                                   //printf("the difference of two integers is %d\n",a-b);
	printf("enter the d value");                       //printf("the sum of two float numbers is %f\n",c+d);
	scanf("%f",&d);                                     //printf("the difference of two float numbers is %f\n",c-d);
	printf("the sum of two integers is %d\n",a+b);
	printf("the differnce of two integers is %d\n",a-b);
	printf("the sum of two float numbers is %f\n",c+d);
	printf("the difference of two float numbers is %f\n",c-d);
	
}
